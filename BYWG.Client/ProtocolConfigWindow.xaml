<Window x:Class="BYWG.Client.ProtocolConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BYWG.Client"
        xmlns:contracts="clr-namespace:BYWG.Contracts;assembly=BYWG.Contracts"
        mc:Ignorable="d"
        Title="添加协议" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 协议名称 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="协议名称: " VerticalAlignment="Center" />
            <TextBox Grid.Column="1" x:Name="ProtocolNameTextBox" />
        </Grid>

        <!-- 协议类型 -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="协议类型: " VerticalAlignment="Center" />
            <ComboBox Grid.Column="1" x:Name="ProtocolTypeComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- 连接字符串 -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="连接字符串: " VerticalAlignment="Top" />
            <TextBox Grid.Column="1" x:Name="ConnectionStringTextBox" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </Grid>

        <!-- 参数配置 -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <GroupBox Grid.Row="0" Header="协议参数" Margin="0,0,0,10">
                <DataGrid x:Name="ParametersDataGrid" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" GridLinesVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="参数名" Binding="{Binding Key}" Width="*" />
                        <DataGridTextColumn Header="参数值" Binding="{Binding Value}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Click="OkButton_Click" x:Name="OkButton" Width="80" />
                <Button Content="取消" Click="CancelButton_Click" x:Name="CancelButton" Width="80" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>