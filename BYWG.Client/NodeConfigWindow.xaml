<Window x:Class="BYWG.Client.NodeConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BYWG.Client"
        mc:Ignorable="d"
        Title="添加/编辑节点" Height="640" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 设备与协议 -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="设备:" VerticalAlignment="Center" />
            <ComboBox Grid.Column="1" x:Name="DeviceComboBox" SelectionChanged="DeviceComboBox_SelectionChanged" />
        </Grid>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="协议:" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" x:Name="ProtocolTextBox" IsReadOnly="True" />
        </Grid>

        <!-- 节点ID -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="节点ID: " VerticalAlignment="Center" />
            <TextBox Grid.Column="1" x:Name="NodeIdTextBox" />
        </Grid>

        <!-- 显示名称 -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="显示名称: " VerticalAlignment="Center" />
            <TextBox Grid.Column="1" x:Name="DisplayNameTextBox" />
        </Grid>

        <!-- 数据类型 -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="数据类型: " VerticalAlignment="Center" />
            <ComboBox Grid.Column="1" x:Name="DataTypeComboBox">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <!-- 协议地址类型与地址 -->
        <Grid Grid.Row="5" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="地址类型: " VerticalAlignment="Center" />
            <ComboBox Grid.Column="1" x:Name="AddressTypeComboBox" SelectionChanged="AddressTypeComboBox_SelectionChanged" />
            <Label Grid.Column="2" Content="设备地址: " VerticalAlignment="Center" />
            <TextBox Grid.Column="3" x:Name="AddressTextBox" ToolTip="例如：Modbus 40001/30001/0x/1x; S7 DB1.DBW0; Mitsubishi D4500" />
        </Grid>

        <!-- 测试读取 -->
        <Grid Grid.Row="6" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="测试读取: " VerticalAlignment="Center" />
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="测试" Click="TestReadButton_Click" Width="100" />
                <TextBlock x:Name="TestReadResultText" Margin="10,4,0,0" Foreground="Gray" />
            </StackPanel>
        </Grid>

        <!-- 初始值 -->
        <Grid Grid.Row="7" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="初始值: " VerticalAlignment="Center" />
            <TextBox Grid.Column="1" x:Name="InitialValueTextBox" />
        </Grid>

        <!-- 设备参数预览 -->
        <GroupBox Grid.Row="8" Header="设备配置(只读)" Margin="0,0,0,10">
            <Grid>
                <DataGrid x:Name="DeviceParamsGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="参数" Binding="{Binding Key}" Width="200"/>
                        <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="确定" Click="OkButton_Click" x:Name="OkButton" Width="80" />
            <Button Content="取消" Click="CancelButton_Click" x:Name="CancelButton" Width="80" />
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>