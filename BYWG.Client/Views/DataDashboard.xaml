<Window x:Class="BYWG.Client.Views.DataDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BYWG.Client.Converters"
        mc:Ignorable="d"
        Title="数据仪表板" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:AlarmLevelToColorConverter x:Key="AlarmLevelToColorConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2E3440" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="BYWG 数据仪表板" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="未连接" FontSize="14" Foreground="Orange" Margin="20,0,0,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="LastUpdateText" Text="" FontSize="12" Foreground="LightGray" Margin="20,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- 主要内容区域 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：图表区域 -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 实时数据图表 -->
                <Border Grid.Row="0" BorderBrush="#4C566A" BorderThickness="1" Margin="0,0,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="实时数据趋势" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#2E3440"/>
                        <Canvas Grid.Row="1" x:Name="TrendChart" Background="#F8F9FA" Margin="10"/>
                    </Grid>
                </Border>
                
                <!-- 数据表格 -->
                <Border Grid.Row="1" BorderBrush="#4C566A" BorderThickness="1" Margin="0,5,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="实时数据表" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#2E3440"/>
                        <DataGrid Grid.Row="1" x:Name="DataGrid" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  IsReadOnly="True" GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column" Margin="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="设备ID" Binding="{Binding DeviceId}" Width="100"/>
                                <DataGridTextColumn Header="数据点" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="值" Binding="{Binding Value}" Width="100"/>
                                <DataGridTextColumn Header="类型" Binding="{Binding DataType}" Width="80"/>
                                <DataGridTextColumn Header="质量" Binding="{Binding Quality}" Width="80"/>
                                <DataGridTextColumn Header="时间" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- 右侧：状态面板 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 设备状态 -->
                <Border Grid.Row="0" BorderBrush="#4C566A" BorderThickness="1" Margin="0,0,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="设备状态" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#2E3440"/>
                        <StackPanel Grid.Row="1" Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="12" Height="12" Fill="Green" Margin="0,0,10,0"/>
                                <TextBlock Text="在线设备: " FontWeight="Bold"/>
                                <TextBlock x:Name="OnlineCountText" Text="0" FontWeight="Bold" Foreground="Green"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="12" Height="12" Fill="Red" Margin="0,0,10,0"/>
                                <TextBlock Text="离线设备: " FontWeight="Bold"/>
                                <TextBlock x:Name="OfflineCountText" Text="0" FontWeight="Bold" Foreground="Red"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Ellipse Width="12" Height="12" Fill="Orange" Margin="0,0,10,0"/>
                                <TextBlock Text="总设备数: " FontWeight="Bold"/>
                                <TextBlock x:Name="TotalCountText" Text="0" FontWeight="Bold" Foreground="Orange"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 协议状态 -->
                <Border Grid.Row="1" BorderBrush="#4C566A" BorderThickness="1" Margin="0,5,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="协议状态" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#2E3440"/>
                        <ListBox Grid.Row="1" x:Name="ProtocolListBox" Margin="10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="{Binding IsRunning, Converter={StaticResource BoolToColorConverter}}" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text=" - " Foreground="Gray"/>
                                        <TextBlock Text="{Binding Type}" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- 报警信息 -->
                <Border Grid.Row="2" BorderBrush="#4C566A" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="报警信息" FontSize="16" FontWeight="Bold" Margin="10" Foreground="#2E3440"/>
                        <ListBox Grid.Row="1" x:Name="AlarmListBox" Margin="10" MaxHeight="150">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Message}" FontWeight="Bold" Foreground="{Binding Level, Converter={StaticResource AlarmLevelToColorConverter}}"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- 底部状态栏 -->
        <Border Grid.Row="2" Background="#2E3440" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="数据点总数: " Foreground="White"/>
                <TextBlock x:Name="DataPointCountText" Text="0" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text=" | 更新频率: " Foreground="White" Margin="20,0,0,0"/>
                <TextBlock x:Name="UpdateFrequencyText" Text="1秒" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text=" | 系统状态: " Foreground="White" Margin="20,0,0,0"/>
                <TextBlock x:Name="SystemStatusText" Text="运行中" Foreground="Green" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
