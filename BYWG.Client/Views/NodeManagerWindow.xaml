<Window x:Class="BYWG.Client.Views.NodeManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="节点管理" Height="520" Width="900"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="刷新" Click="RefreshButton_Click"/>
            <Separator/>
            <Button Content="添加" Click="AddButton_Click"/>
            <Button Content="编辑" Click="EditButton_Click"/>
            <Button Content="删除" Click="RemoveButton_Click"/>
            <Separator/>
            <Button Content="读取选中" Click="ReadSelectedButton_Click"/>
            <Separator/>
            <CheckBox x:Name="AutoRefreshCheck" Content="自动刷新" Margin="10,0,0,0"/>
            <TextBlock Text="间隔(ms):" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="IntervalText" Width="80" Text="1000"/>
            <Button Content="应用" Click="ApplyIntervalButton_Click"/>
        </ToolBar>

        <DataGrid x:Name="NodesGrid" Margin="8" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Extended" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="节点ID" Binding="{Binding NodeIdString}" Width="2*"/>
                <DataGridTextColumn Header="显示名称" Binding="{Binding DisplayName}" Width="1.5*"/>
                <DataGridTextColumn Header="数据类型" Binding="{Binding DataType}" Width="120"/>
                <DataGridTextColumn Header="最新值" Binding="{Binding LatestValue}" Width="1.5*"/>
                <DataGridTextColumn Header="时间戳" Binding="{Binding Timestamp}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>

