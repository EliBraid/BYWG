<Window x:Class="BYWG.Client.Views.QuickConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="快速连接配置" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#2E3440" Padding="15">
            <TextBlock Text="快速连接配置" FontSize="18" FontWeight="Bold" Foreground="White"/>
        </Border>
        
        <!-- 主要内容 -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 左侧：连接模板 -->
            <Border Grid.Column="0" BorderBrush="#4C566A" BorderThickness="1" Margin="0,0,10,0">
                <StackPanel Margin="15">
                    <TextBlock Text="连接模板" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <ListBox x:Name="TemplateListBox" SelectionChanged="TemplateListBox_SelectionChanged">
                        <ListBoxItem Tag="modbus_tcp">
                            <StackPanel>
                                <TextBlock Text="Modbus TCP 设备" FontWeight="Bold"/>
                                <TextBlock Text="适用于大多数工业设备" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="默认端口: 502" FontSize="11" Foreground="Blue"/>
                            </StackPanel>
                        </ListBoxItem>
                        
                        <ListBoxItem Tag="s7_1200">
                            <StackPanel>
                                <TextBlock Text="西门子 S7-1200" FontWeight="Bold"/>
                                <TextBlock Text="适用于西门子S7-1200系列PLC" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="默认端口: 102" FontSize="11" Foreground="Blue"/>
                            </StackPanel>
                        </ListBoxItem>
                        
                        <ListBoxItem Tag="s7_1500">
                            <StackPanel>
                                <TextBlock Text="西门子 S7-1500" FontWeight="Bold"/>
                                <TextBlock Text="适用于西门子S7-1500系列PLC" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="默认端口: 102" FontSize="11" Foreground="Blue"/>
                            </StackPanel>
                        </ListBoxItem>
                        
                        <ListBoxItem Tag="mitsubishi_qna3e">
                            <StackPanel>
                                <TextBlock Text="三菱 Q系列 (Qna-3E)" FontWeight="Bold"/>
                                <TextBlock Text="适用于三菱Q系列PLC以太网通信" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="默认端口: 5007" FontSize="11" Foreground="Blue"/>
                            </StackPanel>
                        </ListBoxItem>
                        
                        <ListBoxItem Tag="mitsubishi_fx3c">
                            <StackPanel>
                                <TextBlock Text="三菱 FX系列 (3C)" FontWeight="Bold"/>
                                <TextBlock Text="适用于三菱FX系列PLC串行通信" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="默认端口: 5007" FontSize="11" Foreground="Blue"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>
            
            <!-- 右侧：配置参数 -->
            <Border Grid.Column="1" BorderBrush="#4C566A" BorderThickness="1">
                <StackPanel Margin="15">
                    <TextBlock Text="连接参数" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="协议类型:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ProtocolTypeText" Text="请选择模板" VerticalAlignment="Center" Margin="0,5" Foreground="Gray"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="设备名称:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DeviceNameTextBox" Text="Device_001" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="IP地址:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="IpAddressTextBox" Text="192.168.1.100" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="端口:" VerticalAlignment="Center" Margin="0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="PortTextBox" Text="502" Margin="0,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="从站地址:" VerticalAlignment="Center" Margin="0,5" x:Name="SlaveAddressLabel"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="SlaveAddressTextBox" Text="1" Margin="0,5"/>
                        
                        <!-- 数据点输入已取消，统一到节点管理中配置 -->
                    </Grid>
                    
                    <StackPanel Margin="0,15,0,0">
                        <Button Content="测试连接" Width="100" Margin="0,0,10,0" Click="TestConnection_Click"/>
                        <Button Content="高级配置" Width="100" Click="AdvancedConfig_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="2" Background="#F8F9FA" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Width="80" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Content="取消" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
