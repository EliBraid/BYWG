# BYWG 工业边缘网关系统环境变量配置
# 复制此文件为 .env 并修改相应的值

# 数据库配置
DB_PASSWORD=your-super-secure-database-password
REDIS_PASSWORD=your-super-secure-redis-password
RABBITMQ_PASSWORD=your-super-secure-rabbitmq-password
MINIO_PASSWORD=your-super-secure-minio-password

# JWT配置
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-256-bits-long

# 监控配置
GRAFANA_PASSWORD=your-grafana-admin-password

# 网关配置
GATEWAY_1_ID=gateway-1
GATEWAY_2_ID=gateway-2

# 网络配置
FRONTEND_URL=https://bywg.local
API_URL=https://api.bywg.local
ADMIN_API_URL=http://admin-api:5000

# 日志配置
LOG_LEVEL=Information
LOG_FILE_PATH=./logs

# 安全配置
ENABLE_HTTPS=true
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# 性能配置
MAX_CONCURRENT_CONNECTIONS=1000
REQUEST_TIMEOUT_SECONDS=30
CACHE_EXPIRATION_MINUTES=60
