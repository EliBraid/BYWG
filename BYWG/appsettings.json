{
  "OpcUaServer": {
    "ApplicationName": "BYWG.IndustrialGateway",
    "ApplicationUri": "urn:localhost:BYWG:IndustrialGateway",
    "EndpointUrl": "opc.tcp://localhost:4840/",
    "SecurityPolicy": "None",
    "CertificateStorePath": "%CommonApplicationData%\\OPC Foundation\\CertificateStores\\MachineDefault\\certs",
    "CertificatePrivateKeyPath": "%CommonApplicationData%\\OPC Foundation\\CertificateStores\\MachineDefault\\private",
    "AutoAcceptUntrustedCertificates": true,
    "MaxConnections": 10,
    "MaxMonitoredItemsPerSubscription": 1000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Opc.Ua": "Information"
    },
    "FilePath": "Logs\\BYWG.IndustrialGateway.log",
    "RollingInterval": "Day",
    "FileSizeLimitBytes": 10485760, // 10MB
    "RetainedFileCountLimit": 7
  },
  "IndustrialProtocols": {
    "PollingInterval": 1000, // 1秒
    "MaxRetryCount": 3,
    "RetryInterval": 1000 // 1秒
  },
  "ModbusRTU": {
    "BaudRate": 9600,
    "DataBits": 8,
    "Parity": "None",
    "StopBits": 1,
    "Timeout": 5000
  },
  "ModbusTCP": {
    "Port": 502,
    "Timeout": 5000,
    "ConnectionTimeout": 5000
  },
  "SiemensS7": {
    "Port": 102,
    "Timeout": 5000,
    "ConnectionTimeout": 5000
  },
  "Mitsubishi": {
    "Port": 5000,
    "Timeout": 5000,
    "ConnectionTimeout": 5000
  }
}