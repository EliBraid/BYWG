<Window x:Class="BYWG.AddNodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加节点" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="添加新节点" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="设备:" Margin="0,0,0,5"/>
            <ComboBox x:Name="deviceComboBox" Margin="0,0,0,10" SelectionChanged="DeviceComboBox_SelectionChanged"/>

            <TextBlock Text="协议:" Margin="0,0,0,5"/>
            <TextBox x:Name="protocolTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="地址类型:" Margin="0,0,0,5"/>
            <ComboBox x:Name="addressTypeComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="设备地址:" Margin="0,0,0,5"/>
            <TextBox x:Name="addressTextBox" Margin="0,0,0,10" ToolTip="例如：Modbus Holding Register: 40001 或 D4500; S7: DB1.DBW0"/>

            <TextBlock Text="数据类型:" Margin="0,0,0,5"/>
            <ComboBox x:Name="dataTypeComboBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="String"/>
                <ComboBoxItem Content="Boolean"/>
                <ComboBoxItem Content="Int16"/>
                <ComboBoxItem Content="Int32"/>
                <ComboBoxItem Content="Float"/>
                <ComboBoxItem Content="Double"/>
            </ComboBox>

            <TextBlock Text="OPC UA 节点ID:" Margin="0,0,0,5"/>
            <TextBox x:Name="nodeIdTextBox" Text="NewNode" Margin="0,0,0,10"/>

            <TextBlock Text="显示名称:" Margin="0,0,0,5"/>
            <TextBox x:Name="displayNameTextBox" Text="New Node" Margin="0,0,0,10"/>

            <TextBlock Text="初始值:" Margin="0,0,0,5"/>
            <TextBox x:Name="initialValueTextBox" Text="0" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="测试读取" Width="100" Height="30" Click="TestReadButton_Click"/>
                <TextBlock x:Name="testReadResultText" Margin="10,5,0,0" Foreground="Gray"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Content="取消" Width="80" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
