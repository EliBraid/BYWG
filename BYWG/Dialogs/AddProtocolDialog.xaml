<Window x:Class="BYWG.AddProtocolDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加协议" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="添加新协议" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="协议名称:" Margin="0,0,0,5"/>
            <TextBox x:Name="nameTextBox" Text="NewProtocol" Margin="0,0,0,10"/>
            
            <TextBlock Text="协议类型:" Margin="0,0,0,5"/>
            <ComboBox x:Name="typeComboBox" SelectedIndex="0" Margin="0,0,0,10">
                <ComboBoxItem Content="MODBUS_TCP"/>
                <ComboBoxItem Content="MODBUS_RTU"/>
                <ComboBoxItem Content="S7"/>
                <ComboBoxItem Content="MC"/>
            </ComboBox>
            
            <TextBlock Text="连接地址:" Margin="0,0,0,5"/>
            <TextBox x:Name="connectionTextBox" Text="192.168.1.100" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click"/>
                <Button Content="取消" Width="80" Height="30" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
